@model InventoryManagementCore.ViewModels.Product.ProductCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create Product</h1>
<hr style="border: 2px solid #28a745;opacity:1;background:#28a745" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

<div class="row">
    <div class="col-md-4">
        <form style="margin-bottom:14%" asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" style="border: 1px solid black;" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>




            <div class="form-group">
                @*<label asp-for="ProductPhoto" class="control-label"></label>*@
                @*<label>Product Image:</label>*@
                @*<input asp-for="ProductPhoto" class="form-control custom-file-input">*@
                @*<input asp-for="ProductPhoto" type="file" accept="image/png, image/jpeg, image/jpg" style="margin-top: 1%;">*@

                <div class="mb-3">
                    <label asp-for="ProductPhoto" class="form-label"></label>
                    <input style="border:1px solid black" asp-for="ProductPhoto" accept="image/png, image/jpeg, image/jpg, image/webp" class="form-control" type="file" id="formFile">
                </div>

                @*<div style="border: 2px solid black">
                        <input asp-for="ProductPhoto" class="form-control custom-file-input" accept="image/png, image/jpeg, image/jpg, image/webp">
                        <label class="custom-file-label" style="margin-left: 4%; margin-top: 31%; max-width: 93%;">Choose File...</label>
                    </div>*@
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" style="border: 1px solid black;" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BuyingPrice" class="control-label"></label>
                <input asp-for="BuyingPrice" class="form-control" style="border: 1px solid black;" />
                <span asp-validation-for="BuyingPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SellingPrice" class="control-label"></label>
                <input asp-for="SellingPrice" class="form-control" style="border: 1px solid black;" />
                <span asp-validation-for="SellingPrice" class="text-danger"></span>
            </div>
            @*<div class="form-group row">
                    <label asp-for="ProductPhoto" class="col-sm-2 col-form-label"></label><br />
                    <div class="col-sm-10">
                        <div class="custom-file">
                            <input asp-for="ProductPhoto" class="form-control custom-file-input">
                            <label class="custom-file-label">Choose File...</label>
                        </div>
                    </div>
                </div>*@
        <div class="form-group">
            <label asp-for="CategoryId" class="control-label"></label>
            <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId" style="border: 1px solid black;"></select>
        </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" style="width:40%;" />
            </div>
            @*This script is required to display the selected file in the file upload element*@

            @section Scripts1 {
                <script>
                    $(document).ready(function () {
                        $('.custom-file-input').on("change", function () {
                            var fileName = $(this).val().split("\\").pop();
                            $(this).next('.custom-file-label').html(fileName);
                        });
                    });
                </script>
            }

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
