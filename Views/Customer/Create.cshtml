@model InventoryManagementCore.Models.Models.Customer

@{
    ViewData["Title"] = "Create";
}

<h1>Create Customer</h1>
<hr style="border: 2px solid #28a745;"/>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CustomerName" class="control-label"></label>
                <input asp-for="CustomerName" class="form-control" style="border: 1px solid black;"/>
                <span asp-validation-for="CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerPhoneNo" class="control-label"></label>
                <input asp-for="CustomerPhoneNo" class="form-control" style="border: 1px solid black;"/>
                <span asp-validation-for="CustomerPhoneNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerAddress" class="control-label"></label>
                <input asp-for="CustomerAddress" class="form-control" style="border: 1px solid black;"/>
                <span asp-validation-for="CustomerAddress" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" style="width:40%;"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
